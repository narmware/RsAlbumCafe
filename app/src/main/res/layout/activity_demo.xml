<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitsavant.curlexample.activity.DemoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rel_screen"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/screen_top"
        android:layout_width="100dp"
        android:layout_height="100dp" />

        <TextView
            android:text="hello sir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.rohitsavant.curlexample.helper.ZoomLayout
        android:layout_below="@id/rel_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/screen_shot"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.rohitsavant.curlexample.helper.ZoomLayout>
</RelativeLayout>

